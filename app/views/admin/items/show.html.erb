<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">

  <div class="item-box-left">
    <div class="item-explain-box">
      <span class="item-explain-contents"><%= @item.name %></span><br>
      <span class="item-explain-contents"><%= @item.content %></span><br>
      <span class="item-explain-contents"><%= @item.material %></span><br>
      <span class="item-explain-contents"><%= @item.centimeter %></span><br>
    </div>
  </div>

  <div class="item-box-center">
    <% @item.images.each do |image| %>
      <%= image_tag image.variant(resize: '500x500') %>
    <% end %>
  </div>

  <div class="item-box-right">
    <div class="item-buying-box">
      <div class="item-price-box">
        ¥<%= @item.price.to_s(:delimited) %>
      </div>
      <% if admin_signed_in? %>
        <%= link_to "商品の編集", edit_admin_item_path(@item.id), method: :get, class: "item-edit-btn" %>
        <p class="or-text">or</p>
        <%= link_to "削除", "/admin/items/#{@item.id}", method: :delete, class:"item-destroy-btn" %>
      <% else %>
        <p class="item-size">サイズを選択する</p>
        <%=link_to("#") do %>
          <button class="item-cart" >カートへ追加</button>
        <%end%>
      <% end %>   
      <div class="item-reservation">
        <% if @item.reservation.id == 4 %>
          この商品は予約商品です
        <% end %>
      </div>
    </div>
  </div>

</div>

<%= render "shared/footer" %>