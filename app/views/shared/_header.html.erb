<header class='top-page-header'>

  <div class='logo'>
    <%= link_to 'NUAX', root_path, class:"logo-link" %>
    <%#= link_to image_tag("nuax-logo.png", class:"logo-link-img"), root_path %>
  </div>

  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'SHOP', root_path, class: "shop-list" %></li>
      <li><%= link_to 'COLLECTION', collections_path, class: "collection-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <li><%= link_to 'CART', public_item_my_cart_path(current_cart), class: "cart" %></li>
      <% elsif admin_signed_in? %>
        <li><%= link_to 'LOGOUT(admin)', destroy_admin_session_path, method: :delete, class: "logout" %></li> 
        <li><%= link_to '出品する', '/admin/items/new', class: "cart" %></li>
      <% else %>
        <li><%= link_to 'LOGIN', new_user_session_path, class: "login" %></li>
        <li><%= link_to 'CART', public_item_my_cart_path(current_cart), class: "cart" %></li>
      <% end %>
    </ul>
  </div>
</header>