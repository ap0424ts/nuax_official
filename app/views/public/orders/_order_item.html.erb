<div class="order-contents">
    <%= image_tag cart_item.item.images[0].variant(resize: '84 x 105') %>
    <div class="cart-content-center">
        <%= cart_item.item.name %>
        <p>size:free</p>
        <% if cart_item.item.reservation.id == 4 %>
          <p class="reservation-red">この商品は予約商品です
        <% end %>
    </div>
    <div class="cart-content-right">
        <div class="cart-content-tag">
            <div><%= cart_item.quantity %>個</div>
            ¥<%= cart_item.item.price.to_s(:delimited) %>
        </div>
    </div>
</div>